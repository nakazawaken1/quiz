<h2 class="mdc-typography--headline2"><%= t 'activerecord.models.question' %></h2>
<div class="question mdc-elevation--z1">
    <%= @question ? safe_join(@question.question.to_s.split("\n"), tag(:br)) : t(:preparing) %>
</div>
<%= @question ? form_with(url: "/questions/answer", id: "answer_form") do |form| %>
    <div class="mdc-text-field mdc-text-field--outlined" data-mdc-auto-init="MDCTextField">
        <input type="text" name="answer" id="answer" class="mdc-text-field__input">
        <div class="mdc-notched-outline">
            <div class="mdc-notched-outline__leading"></div>
            <div class="mdc-notched-outline__notch">
                <label for="answer" class="mdc-floating-label"><%= t 'activerecord.attributes.question.answer' %></label>
            </div>
            <div class="mdc-notched-outline__trailing"></div>
        </div>
    </div>
    <button type="submit" class="mdc-button
                       mdc-button--raised
                       mdc-button--primary
                       mdc-ripple-surface"
                data-mdc-auto-init="MDCRipple"><%= t :respond %></button>
<% end : '' %>
<div id="result"></div>
